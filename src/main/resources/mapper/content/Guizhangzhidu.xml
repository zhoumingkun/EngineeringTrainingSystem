<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toughguy.reportingSystem.model.content.Guizhangzhidu">

	<insert id="save" parameterType="Guizhangzhidu" keyProperty="id" useGeneratedKeys="true">
		insert into content_guizhangzhidu (createTime,updateTime,title, author,content,image,state,hits,source) 
		values (#{createTime},#{updateTime},#{title}, #{author},#{content},#{image},#{state},#{hits},#{source})
	</insert>
	
	<!-- 删除某个信息 -->
	<delete id="delete" parameterType="int" >
		delete from content_guizhangzhidu where id = #{id}
	</delete>
	
	<!-- 查询某个信息 -->
	<select id="find" parameterType="int" resultType="Guizhangzhidu">
		select * from content_guizhangzhidu where id = #{id}
	</select>
	
	<!-- 根据状态查询内容 -->
	<select id="findByState" parameterType="int" resultType="Guizhangzhidu">
		select * from content_guizhangzhidu where state = #{state}
	</select>
	
	<!-- 查询全部信息 -->
	<select id="findAll" resultType="Guizhangzhidu" parameterType="Map">
		select * from content_guizhangzhidu
		<include refid="paramsSQL"/>
	</select>
	
	<!-- 分页查询信息 -->
	<select id="findPaginated" resultType="Guizhangzhidu" parameterType="Map">
		select * from content_guizhangzhidu
		<include refid="paramsSQL"/>
		ORDER BY createTime desc  limit #{offset}, #{limit}
	</select>
	
	<select id="getTotalOfItems" parameterType="Map" resultType="int">
		select count(*) from content_guizhangzhidu
		<include refid="paramsSQL"/>
	</select>

	<!-- 修个某条信息 -->
	<update id="update" parameterType="Guizhangzhidu">
		update content_guizhangzhidu
		<set>
			<if test="title != null and title != ''">title = #{title},</if>
			<if test="author != null and author != ''">author = #{author},</if>
			<if test="content != null and content != ''">content = #{content},</if>
			<if test="image != null and image != ''">image = #{image},</if>
			<if test="state != null and state != ''">state = #{state},</if>
			<if test="hits != null and hits != ''">hits = #{hits},</if>
			<if test="source != null and source != ''">source = #{source},</if>
		</set>
		where id = #{id}
	</update>
	
	<!-- 通用的设置条件的查询SQL语句 -->
	<sql id="paramsSQL">
		<where>
			<if test=" title != null and title != '' ">
				and title = #{title}
			</if>
			<if test=" author != null and author != '' ">
				and author = #{author}
			</if>
			<if test=" type != null and type != '' ">
				and type = #{type}
			</if>
			<if test=" state != null and state != '' ">
				and state = #{state}
			</if>
			<if test=" hits != null and hits != '' ">
				and hits = #{hits}
			</if>
			<if test=" source != null and source != '' ">
				and source = #{source}
			</if>
		</where>
	</sql>
	
</mapper>