<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toughguy.reportingSystem.model.content.Option">

	<insert id="save" parameterType="Option" keyProperty="id" useGeneratedKeys="true">
		insert into service_test_option (createTime,updateTime,option,grade) 
		values (#{createTime},#{updateTime},#{option},#{grade})
	</insert>
	
	<!-- 删除某个信息 -->
	<delete id="delete" parameterType="int" >
		delete from service_test_option where id = #{id}
	</delete>
	
	<!-- 查询某个信息 -->
	<select id="find" parameterType="int" resultType="Option">
		select * from service_test_option where id = #{id}
	</select>
	
	<!-- 根据状态查询内容 -->
	<select id="findByState" parameterType="int" resultType="Option">
		select * from service_test_option where state = #{state}
	</select>
	
	<!-- 查询全部信息 -->
	<select id="findAll" resultType="Option" parameterType="Map">
		select * from service_test_option
		<include refid="paramsSQL"/>
	</select>
	
	<!-- 分页查询信息 -->
	<select id="findPaginated" resultType="Option" parameterType="Map">
		select * from service_test_option
		<include refid="paramsSQL"/>
		ORDER BY createTime desc  limit #{offset}, #{limit}
	</select>
	
	<select id="getTotalOfItems" parameterType="Map" resultType="int">
		select count(*) from service_test_option
		<include refid="paramsSQL"/>
	</select>

	<!-- 修个某条信息 -->
	<update id="update" parameterType="Option">
		update service_test_option
		<set>
			<if test="option != null and option != ''">option = #{option},</if>
			<if test="grade != null and grade != ''">grade = #{grade},</if>
		</set>
		where id = #{id}
	</update>
	
	<!-- 通用的设置条件的查询SQL语句 -->
	<sql id="paramsSQL">
		<where>
		    <if test=" option != null and option != '' ">
				and option = #{option}
			</if>
			<if test=" grade != null and grade != '' ">
				and grade = #{grade}
			</if>
			
		</where>
	</sql>
	
</mapper>