<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toughguy.reportingSystem.model.content.UserResult">

	<insert id="save" parameterType="UserResult" keyProperty="id" useGeneratedKeys="true">
		insert into service_user_result (createTime,updateTime,testId,userId,rank) 
		values (#{createTime},#{updateTime},#{testId},#{userId},#{rank})
	</insert>
	
	<!-- 删除某个信息 -->
	<delete id="delete" parameterType="int" >
		delete from service_user_result where id = #{id}
	</delete>
	
	<!-- 查询某个信息 -->
	<select id="find" parameterType="int" resultType="UserResult">
		select * from service_user_result where id = #{id}
	</select>
	
	<!-- 根据状态查询内容 -->
	<select id="findByState" parameterType="int" resultType="UserResult">
		select * from service_user_result where state = #{state}
	</select>
	
	<!-- 查询全部信息 -->
	<select id="findAll" resultType="UserResult" parameterType="Map">
		select * from service_user_result
		<include refid="paramsSQL"/>
	</select>
	
	<!-- 分页查询信息 -->
	<select id="findPaginated" resultType="UserResult" parameterType="Map">
		select * from service_user_result
		<include refid="paramsSQL"/>
		ORDER BY createTime desc  limit #{offset}, #{limit}
	</select>
	
	<select id="getTotalOfItems" parameterType="Map" resultType="int">
		select count(*) from service_user_result
		<include refid="paramsSQL"/>
	</select>

	<!-- 修个某条信息 -->
	<update id="update" parameterType="UserResult">
		update service_user_result
		<set>
		    <if test="userId != null and userId != ''">userId = #{userId},</if>
			<if test="rank != null and rank != ''">rank = #{rank},</if>
		</set>
		where id = #{id}
	</update>
	
	<!-- 通用的设置条件的查询SQL语句 -->
	<sql id="paramsSQL">
		<where>
		    <if test=" userId != null and userId != '' ">
				and userId = #{userId}
			</if>
			<if test=" rank != null and rank != '' ">
				and rank = #{rank}
			</if>
			
		</where>
	</sql>
	
</mapper>