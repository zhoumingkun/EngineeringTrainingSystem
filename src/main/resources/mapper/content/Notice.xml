<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toughguy.educationSystem.model.content.Notice">

	<insert id="save" parameterType="Notice" keyProperty="id" useGeneratedKeys="true">
		insert into content_notice (createTime,updateTime,title, author,content,summarize,image,state,hits,articleSource) 
		values (#{createTime},#{updateTime},#{title}, #{author},#{content},#{summarize},#{image},#{state},#{hits},#{articleSource})
	</insert>
	
	<!-- 删除某个信息 -->
	<delete id="delete" parameterType="int" >
		delete from content_notice where id = #{id}
	</delete>
	
	<!-- 查询某个信息 -->
	<select id="find" parameterType="int" resultType="Notice">
		select * from content_notice where id = #{id}
	</select>
	<!-- 查询新信息 -->
	<select id="findNew"  resultType="Notice">
		select * from content_notice where createTime =
		 ( select max( createTime ) from content_activity )
	</select>
	<!-- 根据状态查询内容 -->
	<select id="findByState" parameterType="int" resultType="Notice">
		select * from content_notice where state = #{state}
	</select>
	
	<!-- 查询全部信息 -->
	<select id="findAll" resultType="Notice" parameterType="Map">
		select * from content_notice
		<include refid="paramsSQL"/>
	</select>
	
	<!-- 分页查询信息 -->
	<select id="findPaginated" resultType="Notice" parameterType="Map">
		select * from content_notice
		<include refid="paramsSQL"/>
		ORDER BY updateTime desc  limit #{offset}, #{limit}
	</select>
	
	<select id="getTotalOfItems" parameterType="Map" resultType="int">
		select count(*) from content_notice
		<include refid="paramsSQL"/>
	</select>
	
	<!-- 根据标题查询某个信息 -->
 	<select id="findByTitle" parameterType="String" resultType="Notice">
 		select * from content_notice where title like concat(concat('%', #{titleLike, jdbcType=VARCHAR}),'%') ORDER BY createTime desc
 	</select>

	<!-- 修个某条信息 -->
	<update id="update" parameterType="Notice">
		update content_notice
		<set>
			<if test="title != null and title != ''">title = #{title},</if>
			<if test="author != null and author != ''">author = #{author},</if>
			<if test="content != null and content != ''">content = #{content},</if>
			<if test="summarize != null and summarize != ''">summarize = #{summarize},</if>
			<if test="image != null and image != ''">image = #{image},</if>
			<if test="state != null and state != ''">state = #{state},</if>
			<if test="hits != null and hits != ''">hits = #{hits},</if>
			<if test="articleSource != null and articleSource != ''">articleSource = #{articleSource},</if>
		</set>
		where id = #{id}
	</update>
	
	<!-- 通用的设置条件的查询SQL语句 -->
	<sql id="paramsSQL">
		<where>
			<if test=" title != null and title != '' ">
				and title = #{title}
			</if>
			<if test=" author != null and author != '' ">
				and author = #{author}
			</if>
			<if test=" type != null and type != '' ">
				and type = #{type}
			</if>
			<if test=" state != null and state != '' ">
				and state = #{state}
			</if>
			<if test=" summarize != null and summarize != '' ">
				and summarize = #{summarize}
			</if>
			<if test=" hits != null and hits != '' ">
				and hits = #{hits}
			</if>
			<if test=" articleSource != null and articleSource != '' ">
				and articleSource = #{articleSource}
			</if>
			<if test=" titleLike != null and titleLike != '' ">
 				and title like concat(concat('%', #{titleLike, jdbcType=VARCHAR}),'%')
 			</if>
 			<if test=" articleSourceLike != null and articleSourceLike != '' ">
 				and articleSource like concat(concat('%', #{articleSourceLike, jdbcType=VARCHAR}),'%')
 			</if>
		</where>
	</sql>
	
</mapper>