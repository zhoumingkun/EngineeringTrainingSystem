<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toughguy.educationSystem.model.content.Sizhengjianshe">

	<insert id="save" parameterType="Sizhengjianshe" keyProperty="id" useGeneratedKeys="true">
		insert into content_sizhengjianshe (createTime,updateTime,title, author,content,summarize,image,state,hits,source) 
		values (#{createTime},#{updateTime},#{title}, #{author},#{content},#{summarize},#{image},#{state},#{hits},#{source})
	</insert>
	
	<!-- 删除某个信息 -->
	<delete id="delete" parameterType="int" >
		delete from content_sizhengjianshe where id = #{id}
	</delete>
	
	<!-- 查询某个信息 -->
	<select id="find" parameterType="int" resultType="Sizhengjianshe">
		select * from content_sizhengjianshe where id = #{id}
	</select>
	
	<!-- 根据状态查询内容 -->
	<select id="findByState" parameterType="int" resultType="Sizhengjianshe">
		select * from content_sizhengjianshe where state = #{state}
	</select>
	
	<!-- 查询全部信息 -->
	<select id="findAll" resultType="Sizhengjianshe" parameterType="Map">
		select * from content_sizhengjianshe
		<include refid="paramsSQL"/>
	</select>
	
	<!-- 分页查询信息 -->
	<select id="findPaginated" resultType="Sizhengjianshe" parameterType="Map">
		select * from content_sizhengjianshe
		<include refid="paramsSQL"/>
		ORDER BY createTime desc  limit #{offset}, #{limit}
	</select>
	
	<select id="getTotalOfItems" parameterType="Map" resultType="int">
		select count(*) from content_sizhengjianshe
		<include refid="paramsSQL"/>
	</select>
	
	<!-- 根据标题查询某个信息 -->
 	<select id="findByTitle" parameterType="String" resultType="Test">
 		select * from content_sizhengjianshe where title like concat(concat('%', #{titleLike, jdbcType=VARCHAR}),'%') ORDER BY createTime desc
 	</select>
 	
 	<!-- 根据来源查询某个信息 -->
 	<select id="findBySource" parameterType="String" resultType="Test">
 		select * from content_sizhengjianshe where source like concat(concat('%', #{sourceLike, jdbcType=VARCHAR}),'%') ORDER BY createTime desc
 	</select>

	<!-- 修个某条信息 -->
	<update id="update" parameterType="Sizhengjianshe">
		update content_sizhengjianshe
		<set>
			<if test="title != null and title != ''">title = #{title},</if>
			<if test="author != null and author != ''">author = #{author},</if>
			<if test="content != null and content != ''">content = #{content},</if>
			<if test="summarize != null and summarize != ''">summarize = #{summarize},</if>
			<if test="image != null and image != ''">image = #{image},</if>
			<if test="state != null and state != ''">state = #{state},</if>
			<if test="hits != null and hits != ''">hits = #{hits},</if>
			<if test="source != null and source != ''">source = #{source},</if>
		</set>
		where id = #{id}
	</update>
	
	<!-- 通用的设置条件的查询SQL语句 -->
	<sql id="paramsSQL">
		<where>
			<if test=" title != null and title != '' ">
				and title = #{title}
			</if>
			<if test=" author != null and author != '' ">
				and author = #{author}
			</if>
			<if test=" type != null and type != '' ">
				and type = #{type}
			</if>
			<if test=" state != null and state != '' ">
				and state = #{state}
			</if>
			<if test=" summarize != null and summarize != '' ">
				and summarize = #{summarize}
			</if>
			<if test=" hits != null and hits != '' ">
				and hits = #{hits}
			</if>
			<if test=" source != null and source != '' ">
				and source = #{source}
			</if>
			<if test=" titleLike != null and titleLike != '' ">
 				and title like concat(concat('%', #{titleLike, jdbcType=VARCHAR}),'%')
 			</if>
 			<if test=" sourceLike != null and sourceLike != '' ">
 				and source like concat(concat('%', #{sourceLike, jdbcType=VARCHAR}),'%')
 			</if>
 			<if test="titleLikeOrsourceLike != null and titleLikeOrsourceLike != ''">
				and ((title like concat(concat('%', #{titleLikeOrsourceLike, jdbcType=VARCHAR}),'%') or source like concat(concat('%', #{titleLikeOrsourceLike, jdbcType=VARCHAR}),'%')) 
						 )
			</if>
		</where>
	</sql>
	
</mapper>