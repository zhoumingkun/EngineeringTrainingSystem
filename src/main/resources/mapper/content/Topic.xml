<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toughguy.reportingSystem.model.content.Topic">

	<insert id="save" parameterType="Topic" keyProperty="id" useGeneratedKeys="true">
		insert into service_test_topic (createTime,updateTime,testId,topic,image) 
		values (#{createTime},#{updateTime},#{testId},#{topic},#{image})
	</insert>
	
	<!-- 删除某个信息 -->
	<delete id="delete" parameterType="int" >
		delete from service_test_topic where id = #{id}
	</delete>
	
	<!-- 查询某个信息 -->
	<select id="find" parameterType="int" resultType="Topic">
		select * from service_test_topic where id = #{id}
	</select>
	
	<!-- 根据状态查询内容 -->
	<select id="findByState" parameterType="int" resultType="Topic">
		select * from service_test_topic where state = #{state}
	</select>
	
	<!-- 查询全部信息 -->
	<select id="findAll" resultType="Topic" parameterType="Map">
		select * from service_test_topic
		<include refid="paramsSQL"/>
	</select>
	
	<!-- 分页查询信息 -->
	<select id="findPaginated" resultType="Topic" parameterType="Map">
		select * from service_test_topic
		<include refid="paramsSQL"/>
		ORDER BY createTime desc  limit #{offset}, #{limit}
	</select>
	
	<select id="getTotalOfItems" parameterType="Map" resultType="int">
		select count(*) from service_test_topic
		<include refid="paramsSQL"/>
	</select>

	<!-- 修个某条信息 -->
	<update id="update" parameterType="Topic">
		update service_test_topic
		<set>
		    <if test="testId != null and testId != ''">testId = #{testId},</if>
			<if test="topic != null and topic != ''">topic = #{topic},</if>
			<if test="image != null and image != ''">image = #{image},</if>
		</set>
		where id = #{id}
	</update>
	
	<!-- 通用的设置条件的查询SQL语句 -->
	<sql id="paramsSQL">
		<where>
		    <if test=" testId != null and testId != '' ">
				and testId = #{testId}
			</if>
			<if test=" topic != null and topic != '' ">
				and topic = #{topic}
			</if>
			
		</where>
	</sql>
	
</mapper>